{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "esnext",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
  },
  "include": ["./src"],
  "exclude": ["./demo"]
}
